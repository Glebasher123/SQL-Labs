
--в сабстринг мы вводим выражение и символы, которые хотим, чтобы вывелись / вес товара просто суммируем через sum
Select substring('Вес товара Всего', 12,17) as 'Эксперемент с функцией :)', sum([Вес товара]) as 'Вес товара в сумме' 
from [Склад]
            join [Товар] on [Склад].[ID Склада]=[Товар].[ID Склада]

--выводим название месяца, в котором была произведена продажа и после цену продажи в 2 степени
Select DATENAME(month, [Дата Продажи]) as 'Название месяца', power([Цена продажи],2) as 'Цена продажи в степени 2' 
from [Покупатель]
				join [Продажи] on [Покупатель].[№ Покупателя]=[Продажи].[№ Покупателя]

Select upper([Наименование]) as 'Наименование большими буквами', square(Количество) as 'Квадрат из количества', datename(day,[Дата Поставки]) as 'День поставки в месяце' 
from [Поставщик]
				join [Поставка] on [Поставщик].[ID Поставщика]=Поставка.[ID Поставщика]
				join [Товар] on [Поставка].[№ товара] = Товар.[№ товара]


Select charindex('Зефир',[Название товара]) as 'Поиск слова зефир в названии', sin([Вес товара]) as 'Sin веса товара'
from [Склад]
            join [Товар] on [Склад].[ID Склада]=[Товар].[ID Склада]
			join [Категория] on Категория.[ID Категории] = Товар.[ID Категории]


Select lower([Название товара]) as 'Название товара маленькими буквами', exp([Цена]) as 'Экспонента цены'
from [Товар]
			join Категория on Товар.[ID Категории] = Категория.[ID Категории]

select char([Цена]) as 'Символ из таблицы ASCII', ASCII([Название склада]) as 'Возвращаем код ASCII', DIFFERENCE ([Название склада], [Название категории]) as 'Сравнение строк на идентичность'
from [Склад]
            join [Товар] on [Склад].[ID Склада]=[Товар].[ID Склада]
			join [Категория] on Категория.[ID Категории] = Товар.[ID Категории]


select upper([Название товара]) as 'Название большими', sqrt(Количество) as 'Квадратный корень количества', Datediff(day,[Дата поставки], GetDate()) as 'Разница в днях между поставками'
from Товар
		join Поставка on Поставка.[№ товара] = Товар.[№ товара]


Select charindex('а',ФИО,1) AS 'Сколько букв А в ФИО', Datediff(month,[Дата продажи], GetDate()) as 'Разница в днях между продажами', nchar([Цена продажи]) as 'Int в Unicode' 
from [Покупатель]
				join [Продажи] on [Покупатель].[№ Покупателя]=[Продажи].[№ Покупателя]


Select DATEADD(year, -3, [Дата Продажи]) as 'Отнимаем от даты продажи 3 года', replicate(Количество, 3) as 'повторение строки 3 раза'
from [Покупатель]
				join [Продажи] on [Покупатель].[№ Покупателя]=[Продажи].[№ Покупателя]


Select @@PACK_SENT AS 'Отправленные пакеты', @@TIMETICKS as 'кол-во микросекунд в одном такте процессора'
from [Поставщик]
				join [Поставка] on [Поставщик].[ID Поставщика]=Поставка.[ID Поставщика]
				join [Товар] on [Поставка].[№ товара] = Товар.[№ товара]


Select charindex('А',[Название товара]) as 'Поиск буквы а в названии', @@IDLE as 'Кол-во миллисекунд с запуска SQL Server'
from [Склад]
            join [Товар] on [Склад].[ID Склада]=[Товар].[ID Склада]
			join [Категория] on Категория.[ID Категории] = Товар.[ID Категории]



Select SUBSTRING([Название склада],1,4) as 'Название склада в 4 символах',charindex('н',[Название товара]) as 'Букв Н в названии товара', sin([Вес товара]) as 'Вес в Sin', Upper([Название категории]) as 'Название большими' , Продажи.Количество [Дата Продажи], [Цена продажи], ФИО, Поставка.Количество, [Дата Поставки], Наименование, Телефон
from [Склад]
			join [Товар] on [Склад].[ID Склада]=[Товар].[ID Склада]
			join [Категория] on Категория.[ID Категории] = Товар.[ID Категории]
			join [Продажи] on Товар.[№ товара] = Продажи.[№ товара]
			join [Покупатель] on Продажи.[№ Покупателя] = Покупатель.[№ Покупателя]
			join [Поставка] on Товар.[№ товара] = Поставка.[№ товара]
			join [Поставщик] on Поставка.[ID Поставщика] = Поставщик.[ID Поставщика]

